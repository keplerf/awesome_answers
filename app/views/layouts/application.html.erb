<!DOCTYPE html>
<html>
  <head>
    <title>AwesomeAsnwers</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <div id="main-container" class="container">
      <div class="row">


        <div class="col-xs-12">


          <nav class="navbar navbar-default">
        <div class="container-fluid">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="<%= root_path %>">Rails </a>
          </div>
          <div id="navbar" class="navbar-collapse collapse">
            <ul class="nav navbar-nav">

              <li class="active"><a href="<%= root_path %>"> HOME </a></li>
              <li><%= link_to("About", about_us_path, {class: "abc"}) %></li>
              <li><%= link_to("Contatc", new_contact_path) %></li>
              <li><%= link_to("Questions", questions_path) %></li>

              <li><%= link_to("New Question", new_question_path) %></li>

              <% if user_signed_in? %>
                <li>Welcome! <%= current_user.full_name %></li>
                <li><%= link_to "Sign Out", sessions_path , method: :delete %></li>
              <% else %>
                <li><%= link_to "Sign Up", new_user_path %></li>
                <li><%= link_to "Sign In", new_session_path %></li>
              <% end %>

            </ul>

          </div><!--/.nav-collapse -->
        </div><!--/.container-fluid -->
      </nav>

      <% if flash[:notice]  %>
        <div class="alert alert-success" role="alert">
          <%= flash[:notice] %>
        </div>
      <% end %>

      <% if  flash[:alert] %>
        <div class="alert alert-danger" role="alert">
          <%= flash[:alert]  %>
        </div>
      <% end %>
          <!-- <a href="/about "> About  </a> -->
      <%= yield %>
        </div>
      </div>
    </div>
</html>
